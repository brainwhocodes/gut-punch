{
  "extends": "./tsconfig.json", // Inherit base settings
  "compilerOptions": {
    "outDir": "../dist/jobs", // Output jobs alongside library
    "rootDir": "src",        // Root is the src directory
    "declaration": false,  // No declaration files needed for runtime jobs
    "sourceMap": true,     // Enable source maps for job builds
    "moduleResolution": "bundler",
    "noEmit": false        // Ensure files are actually emitted
  },
  "include": ["src/jobs/**/*.ts"], // Only compile files in src/jobs
  "exclude": []
}
